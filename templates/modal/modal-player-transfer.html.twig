<div class="modal fade" id="player-transfer" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ 'modal.title.player.transfer'|trans }}</h5>
      </div>
      <div class="modal-body">
        <form class="modal-form-inventory-remove-item">
          <div class="form-group">
            <label for="select-transfer-inventory-item">{{ 'modal.body.player.transfer-item'|trans }}</label>
            <select class="form-control form-control-lg hide" id="select-transfer-inventory-item"></select>
          </div>
          <div class="form-group">
            <label for="select-transfer-user">{{ 'modal.body.player.transfer-user'|trans }}</label>
            <select class="form-control form-control-lg hide" id="select-transfer-user"></select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'modal.close'|trans }}</button>
        <button type="button" class="btn btn-danger submit" data-dismiss="modal">{{ 'modal.sav'|trans }}</button>
      </div>
    </div>
  </div>
</div>